@using Seminar_1.Models.VMs
@model IEnumerable<ProductVM>

<style>
    /* New Styles */
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin-top: 30px;
    }

    .operationsButtons .btn {
        font-size: 18px;
        padding: 10px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-new {
        background: linear-gradient(to right, #56ccf2, #2f80ed);
        color: #fff;
    }

        .btn-new:hover {
            background: linear-gradient(to right, #3fa9f5, #1c7cd6);
        }

    .btn-outline-dark,
    .btn-delete {
        color: #333;
        border-color: #333;
    }

        .btn-outline-dark:hover,
        .btn-delete:hover {
            color: #fff;
            background-color: #333;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    th {
        background-color: #333;
        color: #fff;
    }

    tbody tr:nth-child(even) {
        background-color: #f8f8f8;
    }

    tbody tr:hover {
        background-color: #f0f0f0;
    }

    img {
        max-width: 200px;
        height: auto;
        border-radius: 8px;
    }
</style>

<div class="container mt-4">
    <div class="row mb-3 operationsButtons">
        <div class="col-md-12">
            <a href="/Product/New" class="btn btn-new font-weight-bold mr-2" data-toggle="tooltip" title="New" data-placement="top">
                <span class="fa fa-plus-circle mr-1"></span>New Product
            </a>

            <button class="btn btn-outline-dark font-weight-bold mr-2" data-toggle="tooltip" title="Edit" data-placement="top" onclick="Product.onEditBtnPress()">
                <span class="fa fa-edit mr-1"></span>Edit
            </button>

            <button type="button" class="btn btn-delete font-weight-bold mr-2" id="btnDelete" data-toggle="tooltip" data-placement="top" title="Delete" onclick="Product.onDelete()">
                <span class="fa fa-trash mr-1"></span>Delete
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table id="table" class="table table-hover">
                <thead>
                    <tr>
                        <th hidden>Product Id</th>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Is in Stock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.Id">
                            <td hidden>@item.Id</td>
                            <td><img src="~/@item.ImagePath" alt="No image available" /></td>
                            <td>@item.Name</td>
                            <td>$@item.Price</td>
                            <td><input type="checkbox" checked="@item.IsAvailable" disabled /></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
