@using Seminar_1.Models.VMs
@model LoginVM

<style>
    /* New Styles */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    .form-control {
        border: 2px solid #ddd;
        border-radius: 5px;
        padding: 12px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #6c5ce7;
            box-shadow: none;
        }

    .font-weight-bold {
        font-weight: 600;
    }

    .btn-danger {
        background-color: #eb4d4b;
        border-color: #eb4d4b;
        width: 120px;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #cc4442;
            border-color: #cc4442;
        }

    .btn-success {
        background-color: #00b894;
        border-color: #00b894;
        width: 120px;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #008c6c;
            border-color: #008c6c;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">

                <div asp-validation-summary="All" class="text-danger"></div>
                <br />

                <div class="form-group row">
                    <label for="UserName" class="col-sm-3 col-form-label font-weight-bold">UserName</label>
                    <div class="col-sm-9">
                        <input asp-for="UserName" id="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Password" class="col-sm-3 col-form-label font-weight-bold">Password</label>
                    <div class="col-sm-9">
                        <input asp-for="Password" id="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn btn-success mr-2"><em class="fas fa-sign-in-alt mr-1"></em> Login</button>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Index"><em class="fas fa-undo-alt mr-1"></em> Cancel</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
